#!/bin/bash

# 询问用户需要创建多少组文件
read -p "请输入要创建的组数 (n): " n

# 验证输入是否为数字
if ! [[ "$n" =~ ^[0-9]+$ ]]; then
    echo "错误：请输入有效的数字！"
    exit 1
fi

# 定义要写入的内容
content='```text

```'

# 循环创建文件并写入内容
for ((i=1; i<=n; i++))
do
    # 创建 A 文件
    echo "$content" > "${i}A.md"
    echo "已创建文件: ${i}A.md"

    # 创建 B 文件
    echo "$content" > "${i}B.md"
    echo "已创建文件: ${i}B.md"
done

echo "已完成创建 $n 组文件！"